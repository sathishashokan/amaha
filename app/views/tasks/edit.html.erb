<html>
<head>
    <style type="text/css">
        html {
            font-family: system-ui;
        }
        h1 {
            font-family: system-ui;
            display: flex;
            color: white;
            margin: 0px;
            padding: 10px 50px;
            background: black;
            border-radius: 6px;
            font-size: 20px;
        }
        label {
            font-family: system-ui;
            font-weight: bold;
        }
        .div_1 {
            margin: 20px;
            padding: 20px;
        }
        div {
            display: block;
            justify-content: center;
            border-radius: 5px;
            background-color: #f2f2f2;
        }
        .large-text-field {
            display: flex;
            flex-wrap: wrap;
            font-family: sans-serif;
            font-size: 20px;
            border: 2px solid #C8C7C7;
            border-radius: 5px;
            margin: 10px 0px;
            padding: 5px; 
        }
        .back-button, .button {
            border: 2px solid #09AAEA;
            border-radius: 5px;
            background-color: #09AAEA;
            margin: 20px 0px;
            padding: 10px 20px;
            font-size: 20px;
            color: white;
            text-decoration: none;
        }
        .button:hover {
            cursor: pointer;
            background: white;
            color: #09AAEA;
        }
        .back-button {
            margin: 40px 0px;
        }
        .back-button:hover {
            background: white;
            color: #09AAEA;
        }
    </style>
</head>
<body>
<h1>Edit : <%= @task.name.upcase %></h1>
<%= form_with model: @task, url: task_path, method: :put do |form| %>
  <div class="div_1">
    <div>
        <%= form.label :name %>
        <%= form.text_field :name, required: :true, class: 'large-text-field' %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_field :description, required: :true, class: 'large-text-field' %>
    </div>

    <div>
        <%= form.label :deadline %>
        <%= form.datetime_local_field :deadline, required: :true, class: 'large-text-field' %>
    </div>

    <div>
        <%= form.label :status %>
        <%= form.select :status, options_for_select(@status), required: :true, class: 'large-text-field' %>
    </div>

    <div>
        <%= form.submit "Update Task", class: 'button' %>
    </div>
  </div>
<% end %>
<%= link_to 'Back', user_profile_path, class: 'back-button' %>
</body>
</html>